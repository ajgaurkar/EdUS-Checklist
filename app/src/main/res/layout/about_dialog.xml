<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_bottom_padding"
        android:layout_marginTop="40dp"
        android:background="@drawable/about_dialog_bg" />

    <ImageView
        android:id="@+id/about_dialog_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/about_dialog_imageview_bg"
        android:padding="4dp"
        android:src="@mipmap/icon_edus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="EdUS Checklist"
        android:textColor="@color/colorOffWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/about_dialog_icon_iv"
        android:layout_toRightOf="@+id/about_dialog_icon_iv"
        android:layout_toEndOf="@+id/about_dialog_icon_iv" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Vesrion 1.0(Beta)"
        android:textColor="@color/colorOffWhite"
        android:layout_alignLeft="@+id/about_dialog_icon_iv"
        android:layout_alignStart="@+id/about_dialog_icon_iv" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Made by : Ajinkya Gaurkar"
        android:textColor="@color/colorOffWhite"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />



    <View
        android:id="@+id/view_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginTop="61dp" />

    <TextView
        android:id="@+id/textView12"
        android:padding="1dp"
        android:textColor="@color/colorOffWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignTop="@+id/textView11"
        android:textStyle="italic"
        android:layout_marginTop="27dp"
        android:text="                    Maakservices"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />
</RelativeLayout>